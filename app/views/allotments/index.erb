<h1>Room Allotments</h1>
 <p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Room</th>
      
      <th>Action</th>

      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @allots.each do |a| %>
      <tr>
        <td><%= a.user.name %></td>
        <td><%= a.room.number%></td>
       
         <td><%= link_to "checkout room", checkout_path(a)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
<br>
 
