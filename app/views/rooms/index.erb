<h1>Rooms</h1>
 
<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Price</th>
      <th>Type</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.number %></td>
        <td><%= room.price %></td>
        <td><%= room.room_type %></td>
        <td><%= room.room_status %></td>
        <td><%= book_link(room)%></td>
        <td><%= link_to "Edit", edit_room_path(room) %></td>
        <td><%= link_to "Destroy", room, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
<br>
 
<%= link_to "New Room", new_room_path %>