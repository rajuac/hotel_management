<h1>Customers</h1>
 
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>phone number</th>
      
      <th>Adhar no</th>
      <th>Email</th>
      <th>Age</th>
      <th>Action</th>

      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @customers.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.phone_no %></td>
       
        <td><%= c.aadhar_no %></td>
         <td><%= c.email %></td>
         <td><%= c.age %></td>
         <td><%= link_to "Book room", available_rooms_path
%></td>
        <td><%= link_to "Edit", edit_customer_path(c) %></td>
        <td><%= link_to "Destroy", c, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
